{
    "name": "sgoettsch/monolog-rotating-file-handler",
    "description": "Rotating File Handler for Monolog library",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "monolog"
    ],
    "authors": [
        {
            "name": "Sebastian Goettsch"
        }
    ],
    "autoload": {
        "psr-4": {
            "sgoettsch\\MonologRotatingFileHandler\\": "src"
        }
    },
    "require": {
        "php": "^8.1",
        "monolog/monolog": "^3"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.5",
        "phpunit/phpunit": "^12",
        "squizlabs/php_codesniffer": "*"
    },
    "scripts": {
        "test": "php vendor/bin/phpunit --fail-on-deprecation",
        "phpcs": "php vendor/bin/phpcs",
        "phpmd": "php vendor/bin/phpmd src/,tests/ text cleancode,codesize,controversial,design,naming,unusedcode"
    }
}
